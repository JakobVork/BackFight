<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_listBackground"
    tools:context="com.studio.jarn.backfight.Fragment.MonsterDetails">

    <TextView
        android:id="@+id/fragment_monster_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_monster_iv_image"
        app:layout_constraintRight_toRightOf="@+id/fragment_monster_iv_image"
        app:layout_constraintTop_toBottomOf="@+id/fragment_monster_iv_image" />

    <ImageView
        android:id="@+id/fragment_monster_iv_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/fragment_monster_tv_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/hp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_monster_tv_name"
        app:layout_constraintRight_toRightOf="@+id/fragment_monster_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/fragment_monster_tv_name" />

    <TextView
        android:id="@+id/fragment_monster_tv_dmg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dmg"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_monster_tv_hp"
        app:layout_constraintRight_toRightOf="@+id/fragment_monster_tv_hp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_monster_tv_hp" />

    <!-- Inspiration from http://stackoverflow.com/questions/14779688/put-buttons-at-bottom-of-screen-with-linearlayout -->
</android.support.constraint.ConstraintLayout>
