<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_listBackground"
    android:orientation="vertical"
    tools:context="com.studio.jarn.backfight.fragment_item_details">

    <ImageView
        android:id="@+id/fragment_item_details_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_breastplate" />

    <TextView
        android:id="@+id/fragment_item_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        app:layout_constraintTop_toTopOf="parent"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/fragment_item_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintRight_toRightOf="parent"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/fragment_item_details_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats" />

    <!-- Inspiration from http://stackoverflow.com/questions/14779688/put-buttons-at-bottom-of-screen-with-linearlayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:background="@drawable/arrow_left_icon"
            android:scaleType="fitCenter" />

    </LinearLayout>
</LinearLayout>
