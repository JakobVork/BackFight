<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studio.jarn.backfight">

    <!-- Credit for Icon: http://raindropmemory.deviantart.com-->

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenMenuTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenGameTheme" />
        <activity
            android:name=".MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenMenuTheme"/>

        <activity
            android:name=".Settings_Activity.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenMenuTheme" />
        <activity
            android:name=".Rules_Activity.RulesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenMenuTheme" />
        <activity
            android:name=".LoadGameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenMenuTheme" />
        <activity
            android:name=".NewGameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenMenuTheme" />
        <activity
            android:name=".LobbyActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenMenuTheme" />

    </application>

</manifest>